<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/btn_color">


    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="115dp"
        android:paddingTop="14dp"
        android:paddingLeft="19dp"
        android:paddingBottom="14dp"
        android:paddingRight="19dp"
        android:background="@drawable/item_list_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_pet_trainer_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Steven C. Harms" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:src="@drawable/stars" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="50dp"
            android:textSize="10dp"
            android:text="Pet Trainer"/>

        <TextView
            android:id="@+id/tv_pet_trainer_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:layout_marginTop="30dp"
            android:text="$100"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_marginTop="41dp"
            android:layout_marginLeft="52dp"
            android:text="per hour"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:src="@drawable/google_pin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_marginTop="68dp"
            android:layout_marginLeft="16dp"
            android:text="View on map"/>

        <ImageView
            android:id="@+id/iv_pet_trainer_photo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="213dp"
            android:src="@drawable/t1" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>